@page
@model IndexModel
@{
    ViewData["Title"] = "Pico y Placa";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f2f4f7;
            height: 100vh;
            margin: 0;
            align-items: center;
            justify-content: center;
        }

        .container {
            max-width: 600px;
            padding: 20px;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            border: none;
        }

        .card-header {
            background-color: #0056b3;
            color: #ffffff;
            border-bottom: 1px solid #004494;
            text-align: center;
            padding: 20px;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

        .card-body {
            padding: 30px;
            background-color: #ffffff;
            border-radius: 0 0 12px 12px;
        }

        .btn-primary-custom {
            background-color: #0056b3;
            border-color: #0056b3;
            transition: background-color 0.3s, border-color 0.3s;
            position: relative;
        }

            .btn-primary-custom:hover {
                background-color: #003d7a;
                border-color: #003d7a;
            }

            .btn-primary-custom:disabled {
                background-color: #003d7a;
                border-color: #003d7a;
            }

            .btn-primary-custom .spinner-border {
                display: none;
            }

            .btn-primary-custom.loading .spinner-border {
                display: inline-block;
                width: 1.5rem;
                height: 1.5rem;
                border-width: 2px;
            }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
            box-shadow: none;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-group label {
            font-weight: 600;
        }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

        .alert-custom {
            margin-top: 20px;
            border-radius: 8px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form id="picoPlacaForm" asp-controller="PicoPlaca" asp-action="Verificar" method="post">
                    <div class="form-group">
                        <label for="placa">Placa</label>
                        <input type="text" id="placa" name="placa" class="form-control" placeholder="Ingrese la placa" required />
                    </div>
                    <div class="form-group">
                        <label for="fecha">Fecha</label>
                        <input type="date" id="fecha" name="fecha" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="hora">Hora</label>
                        <input type="time" id="hora" name="hora" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary-custom btn-block" id="submitButton">
                        Verificar
                        <span class="spinner-border" role="status" aria-hidden="true"></span>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#picoPlacaForm').on('submit', function () {
                var $btn = $('#submitButton');
                $btn.addClass('loading');
                $btn.prop('disabled', true);
            });
        });
    </script>

</body>
</html>
